<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:textColor="@color/white"
                android:textStyle="bold|normal|italic"
                android:text="Facebook"/>
            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                app:cardCornerRadius="24dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:weightSum="2"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/switch_thumb">
                        <TextView
                            android:id="@+id/logim"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="4dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|normal"
                            android:paddingLeft="14dp"
                            android:paddingBottom="4dp"
                            android:paddingRight="14dp"
                            android:background="@drawable/switch_trk"
                            android:text="@string/log_in"/>
                        <TextView
                            android:id="@+id/singUp"
                            android:layout_width="0dp"
                            android:paddingTop="4dp"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:paddingBottom="4dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingRight="14dp"
                            android:paddingLeft="14dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold|normal"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sing Up"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logInLayout"
                        android:padding="24dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Email or User name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"
                            app:shapeAppearanceOverlay="@style/Button4"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeColor="#6C6C6C"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/email"
                                android:ems="10"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:inputType="textPersonName|textEmailAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>



                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Password"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"
                            app:shapeAppearanceOverlay="@style/Button4"
                            app:endIconMode="password_toggle"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeColor="#6C6C6C"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/password"
                                android:ems="10"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:inputType="textPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:text="Forget password?"
                            android:textStyle="normal"
                            android:textColor="#555151"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/singUpLayout"
                        android:padding="24dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Email or User name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"
                            app:shapeAppearanceOverlay="@style/Button4"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeColor="#6C6C6C"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emails"
                                android:ems="10"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:inputType="textPersonName|textEmailAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Password"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"
                            app:shapeAppearanceOverlay="@style/Button4"
                            app:endIconMode="password_toggle"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeColor="#6C6C6C"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwords"
                                android:ems="10"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:inputType="textPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Confirm Password"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="4dp"
                            app:shapeAppearanceOverlay="@style/Button4"
                            app:endIconMode="password_toggle"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeColor="#6C6C6C"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwords01"
                                android:ems="10"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:inputType="textPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/singIns"
                        android:text="Log In"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/pinkColor"
                        android:elevation="16dp"
                        app:shapeAppearanceOverlay="@style/Button5"
                        android:gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:textColor="#3A3838"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/google"/>
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/facebook"/>
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/twitter"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>